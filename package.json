{
    "name": "compo-lazy",
    "version": "0.8.6",
    "homepage": "https://github.com/atmajs/compo-lazy",
    "authors": [
        "Alex Kit <alex.kit@atmajs.com>"
    ],
    "description": "MaskJS lazy render component (Atma.js)",
    "main": "lib/lazy.js",
    "license": "MIT",
    "devDependencies": {
        "app-bundler": "0.0.35",
        "atma": "^0.10.59",
        "atma-loader-babel": "^1.1.26",
        "atma-loader-ts": "^1.0.0",
        "babel-preset-es2015": "^6.18.0",
        "maskjs": "^0.64.21"
    },
    "scripts": {
        "test": "atma test",
        "build": "app-bundler",
        "watch": "app-bundler --watch",
        "server": "atma server"
    },
    "app-bundler": {
        "file": "src/export.ts",
        "outputMain": "lib/lazy.js",
        "package": {
            "module": "commonjs",
            "moduleWrapper": "umd",
            "commonjs": {
                "output": "simplified"
            }
        },
        "dynamicDependencies": [
            "maskjs"
        ],
        "defaultExtensions": {
            "js": "ts"
        },
        "middlewares": {
            "ts": [
                "atma-loader-ts:read"
            ]
        }
    },
    "atma": {
        "plugins": [
            "atma-loader-babel",
            "atma-loader-ts"
        ],
        "settings": {
            "atma-loader-babel": {
                "extensions": [
                    "es6",
                    "test"
                ],
                "babel": {
                    "presets": [
                        "es2015"
                    ]
                }
            },
            "atma-loader-ts": {}
        }
    }
}
