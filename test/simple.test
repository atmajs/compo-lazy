UTest({
	$config: {
		timeout: 2000
	},
	'test a:lazy component' (done) {
		UTest
			.server
			.request('/examples/simple.html')
			.done(document => {
				
				var $dom = $(document).hasNot_('h4');
				setTimeout(() => {
					$dom.has_('h4');
					done();
				}, 1100);
			})
	},
	'test inherited component' (done) {
		UTest
			.server
			.request('/examples/inheritance.html')
			.done(document => {
				
				var $dom = $(document).hasNot_('button');
				setTimeout(() => {
					$dom.has_('button');
					done();
				}, 1100);
			})
	},
})